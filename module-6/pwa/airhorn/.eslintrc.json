{
  "extends": ["eslint:recommended", "google"],
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "jsx": false,
      "experimentalObjectRestSpread": false
    },
    "sourceType": "module"
  },
  "rules": {
    "indent": [2, 2, {
      "SwitchCase": 1,
      "VariableDeclarator": 2,
      "MemberExpression": 2,
      "outerIIFEBody": 0
    }],
    "max-len": [2, 100, {
      "ignoreComments": true,
      "ignoreUrls": true,
      "tabWidth": 2
    }],
    "no-var": 2,
    "no-console": 0,
    "prefer-const": 2,
    "comma-dangle": 0,
    "arrow-parens": 0,
    "require-jsdoc": 0
  }
}